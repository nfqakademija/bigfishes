                                    <div class="form-check form-check-inline">
                                        <input type="radio"
                                               id="reservation_timeTo_1"
                                               name="reservation[timeTo]"
                                               required="required"
                                               class="form-check-input"
                                               value="20"
                                               checked="checked">
                                        <label class="form-check-label required"
                                               for="reservation_timeTo_1">
                                            {{ '20:00' }}
                                        </label>
                                    </div>
                                </div>
                                {% do form.timeTo.setRendered() %}
