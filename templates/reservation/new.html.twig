{% extends 'base.html.twig' %}

{% block title %}{{ 'Reservation'|trans }}{% endblock %}

{% block body %}
    <header class="row" style="height: 95px;">

    </header>
    <div class="container">
        <div class="box box-primary mt-4" style="opacity: 0.85">
            <div class="box-header with-border">
                <h3 class="box-title">{{ 'Reservation!'|trans }}</h3>
                <h4>{{ sectorNumber }} </h4>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            {{ form_start(form, {'attr': {'class': 'custom_reservation_form'}} ) }}
            {{ form_row(form.name) }}
            {{ 'Start date'|trans }}: {{ dateFrom }}
            {{ form_row(form.timeFrom) }}
            {{ form_row(form.dateTo) }}
            {{ form_row(form.timeTo) }}

            {{ form_widget(form) }}

            {{ 'Total hours'|trans }}: {{ hours }} h
            <br>
            {% if house %}
                {{ 'Reservation with house'|trans }}: {{ 'yes'|trans }}
            {% endif %}
            <br>
            {{ 'Total amount'|trans }}: {{ amount }} Eur
            <br>
            <button class="registration_button" type="submit">{{ 'Confirm Reservation!'|trans }}</button>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}
