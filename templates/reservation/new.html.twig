{% extends 'base.html.twig' %}


{% block title %}{{ 'Reservation'|trans }}{% endblock %}


{% block body %}
    <div class="box box-success mt-4 mx-auto" style="opacity: 0.85; width: 50em">
        <div class="box-header with-border ml-4">
            <h3 class="box-title">{{ 'Reservation!'|trans }}</h3>
            <h4>{{ sectorNumber }} </h4>
        </div>
        {{ form_start(form, {'attr': {'class': 'custom_reservation_form'}} ) }}
        <div class="pl-3">
            <span class="d-inline-block"> {{ 'Reservation name'|trans }}:</span>
            <span class="d-inline-block" style="width: 33.8em"> {{ form_widget(form.name) }} </span>
        </div>
        <div class="row mt-2 p-3">
            <div class="col-sm-6 text-center">
                <div class="pt-2" style="height: 8em; border: 1px solid #D2D8E1">
                    <div style="padding: 7px">
                        {{ 'Reserved from'|trans }}: {{ dateFrom }}
                    </div>
                    <div>
                        {{ form_label(form.timeFrom) }}
                        {{ form_widget(form.timeFrom) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-6 text-center">
                <div class="pt-2" style="height: 8em; border: 1px solid #D2D8E1">
                    <div>
                        {{ 'Reserved to'|trans }}: {{ form_widget(form.dateTo, {'attr': {'max': availableDateTo, 'class':'d-inline-block'}}) }}
                    </div>
                    <div>
                        {{ form_label(form.timeTo) }}
                        {{ form_widget(form.timeTo) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-center">
                {{ form_widget(form) }}
            </div>
        </div>
        <button class="submit_button" type="submit">Patvirtinti rezervacijÄ…!</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" defer></script>
    <script src="{{ asset('build/js/reservations.js') }}" defer></script>
{% endblock %}
