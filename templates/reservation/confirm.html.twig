{% extends 'base.html.twig' %}

{% block title %}{{ 'Reservation Confirmation'|trans }}{% endblock %}

{% block body %}
    <div class="row mt-3 mx-auto confirmation_form">
        <div class="col-sm-6 mx-auto box box-success">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-2">
                    {{ message|trans }}
                </div>
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning mt-2">
                    {{ message|trans }}
                </div>
            {% endfor %}
            <div class="row box-header with-border pb-0">
                <div class="col-sm-12 pl-1">
                    <div class="h4 box-title">{{ 'Reservation Confirmation'|trans }}</div>
                    <div class="h6">{{ data.sectorName }} </div>
                </div>
            </div>
            <div class="row mt-2 mb-2">
                <div class="col-sm-6 text-center">
                    <div class="pt-2" style="height: 5em; border: 1px solid #D2D8E1">
                        <div class="">
                            {{ 'Reservation Start Date'|trans }}: {{ data.dateFrom|date('Y-m-d') }}
                        </div>
                        <div class="text-center">
                            {{ 'Time from'|trans }}: {{ data.dateFrom|date('H:i') }}
                        </div>
                    </div>
                </div>
                <div class="col-sm-6 text-center">
                    <div class="pt-2" style="height: 5em; border: 1px solid #D2D8E1">
                        <div>
                            {{ 'Reservation End Date'|trans }}: {{ data.dateTo|date('Y-m-d') }}
                        </div>
                        <div>
                            {{ 'Time to'|trans }}: {{ data.dateTo|date('H:i') }}
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-12 text-center">
                    {{ 'Fishers number'|trans }}: {{ data.fishersNumber }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    {{ 'Total hours'|trans }}: {{ data.hours }} h
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12 text-center">
                    {{ 'Total fishing price'|trans }}: {{ fishingPrice }} Eur
                </div>
            </div>
            {% if data.house %}
                <div class="row">
                    <div class="col-sm-12 text-center">
                        {{ 'House reservation price'|trans }}: {{ housePrice }} Eur
                    </div>
                </div>
            {% endif %}
            <hr>
            <div class="row">
                <div class="col-sm-12 text-center h5">
                    {{ 'Total price'|trans }}: {{ data.amount }} Eur
                </div>
            </div>
            {% if data.dateTo < "now"|date_modify("+3 day") %}
                <form class="row p-3" method="post"
                      action="{{ path('confirm_reservation', { 'reservation': data.id }) }}">
                    <button type="submit" class="submit_button mb-2">{{ 'Confirm Reservation'|trans }}</button>
                </form>
                <form class="row p-3" method="post"
                      action="{{ path('payment_reservation', { 'reservation': data.id }) }}">
                    <button type="submit"
                            class="submit_button mb-2">{{ 'Confirm rezervation and make payment!'|trans }}</button>
                </form>
            {% else %}
                <form class="row p-3" method="post"
                      action="{{ path('payment_reservation', { 'reservation': data.id }) }}">
                    <button type="submit"
                            class="submit_button mb-2">{{ 'Confirm rezervation and make payment!'|trans }}</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}

