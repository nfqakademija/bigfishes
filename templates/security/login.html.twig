{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <header class="row" style="height: 95px;">

        </header>
        <main>
            <div class="box box-info login-form">
                <div class="box-header with-border text-center">
                    <h3 class="box-title">{{ 'Please sign in!'|trans }}</h3>
                </div>

                <!-- /.box-header -->
                <!-- form start -->
                <form class="form-horizontal" method="post">
                    <div class="box-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">{{ 'Email'|trans }}</label>

                            <div class="col-sm-10">
                                <input type="email" name="email" value="{{ last_username }}" class="form-control" id="inputEmail3" placeholder="{{ 'Email'|trans }}" required autofocus>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3" class="col-sm-2 control-label">{{ 'Password'|trans }}</label>

                            <div class="col-sm-10">
                                <input type="password" name="password "class="form-control" id="inputPassword3" placeholder="{{ 'Password'|trans }}" required>
                            </div>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info ml-4">{{ 'Sign in'|trans }}</button>
                    </div>
                    <!-- /.box-footer -->
                </form>
            </div>
        </main>
    </div>
{% endblock %}
