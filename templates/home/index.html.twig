{% extends 'base.html.twig' %}

{% block calendar %}{% endblock %}

{% block body %}
        <div class="json_info" data-calendar_information="{{ jsonContent|json_encode|e('html_attr') }}"></div>
        <main>
            <div class="row mt-2 justify-content-center">
                <div class="col-sm-12 text-center">
                    <h3>Sektori킬 rezervacija</h3>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-sm-12">
                    {{ include('./includes/calendar.html.twig') }}
                </div>
            </div>
            <div class="row justify-content-center mt-2">
                <div class="col-sm-6 calendar_legend">
                    <ul class="pt-3 pb-1" style="list-style-type: none">
                        <li class="d-inline-block">
                            <img src="../build/images/busyline-block-busy-start.8d9e8932.png" style="width:1.5em; height: auto">
                            <span> - u탑imta nuo 20:00</span>
                        </li>
                        <li class="d-inline-block">
                            <img src="../build/images/busyline-block-busy-end.0689a56b.png" style="width:1.5em; height: auto">
                            <span> - u탑imta iki 20:00</span>
                        </li>
                        <li class="d-inline-block">
                            <img src="../build/images/busyline-block-busy.004e8bba.png" style="width:1.5em; height: auto">
                            <span> - u탑imta</span>
                        </li>
                        <li class="d-inline-block">
                            <img src="../build/images/busyline-block-free.0af7ea43.png" style="width:1.5em; height: auto">
                            <span> - laisva</span>
                        </li>
                    </ul>
                </div>

            </div>
            <div class="row mt-3">
                <div class="col-sm-6">
                    {{ include('./includes/reservoir.html.twig') }}
                </div>
                <div class="col-sm-6 information_tab">

                </div>
            </div>
        </main>
{% endblock %}

{% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" defer></script>
            <script src="{{ asset('../libs/mapoid.js') }}" defer></script>
            <script src="{{ asset('build/js/app.js')}}" defer></script>
            <script src="{{ asset('build/js/main.js')}}" defer></script>
{% endblock %}
